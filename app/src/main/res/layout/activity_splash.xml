<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".presentation.ui.base.splash.SplashActivity">

  <androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent=".5"
    android:id="@+id/splashGuidelLine"/>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/englishButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/splashGuidelLine"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/md_blue_300"
    android:textColor="@color/md_white"
    android:text="English"
    android:layout_marginEnd="8dp"/>
  <com.google.android.material.button.MaterialButton
    android:id="@+id/arabicButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/splashGuidelLine"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/md_green_300"
    android:textColor="@color/md_white"
    android:text="العربية"
    android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>